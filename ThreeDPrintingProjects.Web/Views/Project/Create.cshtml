@model ThreeDPrintingProjects.Web.Models.Project.ProjectDetails
<form method="post" class="jumbotron">
    <div class="form-group row">
        <label for="Name" class="col-sm-3 col-xs-12">Project Name</label>
        <div class="col-sm-9 col-xs-12">
            @Html.TextBoxFor(model=> model.Name, new Dictionary<string, object>{{"class", "form-control"}})
        </div>
    </div>
    <div class="form-group row">
        <label for="Description" class="col-sm-3 col-xs-12">Description</label>
        <div class="col-sm-9 col-xs-12">
            @Html.TextAreaFor(model => model.Description, new Dictionary<string, object> { { "class", "form-control" }, {"rows", "3"} })
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Start Project</button>
</form>